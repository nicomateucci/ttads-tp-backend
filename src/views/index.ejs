<% include partials/_header%>


    <div class="container ">
      <div class="row">
        <!-- FORM -->
          <div class="col-md-4">
            <div class="card">
              <div class="card-body">
                <h2>Nuevo Evento</h2>
                <form action="/agregar" method="post">
                  <div class="form-group">
                    <input type="text" class="form-control" name="titulo" placeholder="Ingrese el titulo">
                  </div>
                  <div class="form-group">
                    <textarea cols="80" class="form-control" name="descripcion" placeholder="Inserte la descripción"></textarea>
                  </div>
                  <div class="form-group">
                    <input class="form-control" type="date" name="fecha">
                  </div>
                  <button type="submit" class="btn btn-primary btn-block"name="button" value="Agregar">Agregar </button>
                </form>
              </div>
            </div>
          </div>
          <div class="col-md-8">
              <table class="table table-bordered table-striped table-hover">
                <thead>
                  <tr>
                    <th>N°</th>
                    <th>Titulo</th>
                    <th>Descripción</th>
                    <th>Fecha</th>
                    <th>Operaciones</th>
                  </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < tareas.length; i++){%>
                    <tr>
                      <td><%= i + 1%></td>
                      <td><%= tareas[i].titulo%></td>
                      <td><%= tareas[i].descripcion%></td>
                      <td><%= tareas[i].fecha%></td>
                      <td>
                        <%
                          let color = "";
                          if(tareas[i].estado === true){
                          color = "success";
                        } else {
                          color = "dark";
                        }%>
                        <a href="/completada/<%= tareas[i]._id %>" class="btn btn-<%= tareas[i].estado === true? "success":"dark";%>" name="btnDone">Hecho</a>
                        <a href="/editar/<%= tareas[i]._id %>" class="btn btn-primary" name="btnEdit">Editar</a>
                        <a href="/borrar/<%= tareas[i]._id%>" class="btn btn-danger" name="btnDelete">Borrar</a>
                      </td>
                    </tr>
                    <%}%>
                </tbody>
              </table>
          </div>
        <!-- LIST -->
      </div>
    </div>

